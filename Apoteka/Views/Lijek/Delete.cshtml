@model LijekDeleteViewModel

@{

    ViewData["Title"] = "Izbriši lijek";


}

<h3 class="text-danger mt-5 mb-5">Da li ste sigurni da želite izbrisati lijek  @Model.Lijek.NazivLijeka?</h3>

<div class="card text-left text-secondary ">

    <div class="card-header">
        <h3 class="text-dark">  @Model.Lijek.NazivLijeka</h3>
    </div>

    <div class="card-body">
        <br />
        <p>Oblik lijeka : @Model.Lijek.OblikLijeka</p>
        <p>Pakovanje lijeka: @Model.Lijek.OblikLijeka</p>
        <p>Cijena: @Model.Lijek.Cijena.ToString("c")</p>
        <p>Režim izdavanja lijeka: @Model.KategorijaLijeka</p>
        <p>Primjena: @Model.Lijek.Primjena</p>
        <p>
            Na stanju:

            @if (Model.Lijek.NaStanju)
            {<text>Da</text>}
        else
        {<text>Ne</text>}
        </p>
        <br />
    </div>

     <div class="card-footer text-left">
         <form asp-action="Delete" enctype="multipart/form-data" asp-controller="Lijek" method="post" class="mt-3">
             <input hidden asp-for="Id" />
             <a asp-controller="lijek" asp-action="list" class="btn btn-primary">Poništi</a>
             <input type="submit" value="Izbriši" class="btn btn-danger" />
         </form>
     </div>

</div>




