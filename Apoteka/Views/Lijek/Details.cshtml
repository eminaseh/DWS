@model LijekDetailsViewModel

@{

    ViewData["Title"] = "Detalji lijeka";


}

<h3 class="text-center m-5 text-secondary">@Model.PageTitle</h3>

<div class="card text-left  ">
    <div class="card-header bg-primary text-white">
        <h3>  @Model.Lijek.NazivLijeka</h3>
    </div>
    <div class="card-body">
        <br />
        <p class="m-2">Oblik lijeka : @Model.Lijek.OblikLijeka</p>
        <p class="m-2">Pakovanje lijeka : @Model.Lijek.PakovanjeLijeka</p>
        <p class="m-2"> Cijena : @Model.Lijek.Cijena.ToString("c")</p>
        <p class="m-2">Režim izdavanja lijeka : @Model.KategorijaLijeka</p>
        <p class="m-2">Primjena:<br /> @Model.Lijek.Primjena</p>
        <p class="m-2"> Na stanju :

        @if (Model.Lijek.NaStanju)
        {<text>Da</text>}
          else
        {<text>Ne</text>}   
        </p>
        <br />
    </div>

    <div class="card-footer text-left">
        <a asp-controller="lijek" asp-action="list" class="btn btn-primary">Nazad</a>

          @if (User.IsInRole("Admin")  || User.IsInRole("Uposlenik"))
          {

           <a asp-controller="lijek" asp-action="edit" asp-route-id="@Model.Lijek.LijekId" class="btn btn-primary">Uredi</a>
           <a asp-controller="lijek" asp-action="delete" asp-route-id="@Model.Lijek.LijekId"  class="btn btn-outline-primary">Izbriši</a>
          }

       
    </div>

</div>



                       
