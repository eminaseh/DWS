@model IEnumerable<Uposlenici>


@{
    ViewData["Title"] = "Naslovna";
}

 <img src="~/images/image9.jpg" class="img-fluid m-0" alt="Responsive image"/>

<h4 class="text-center text-secondary m-5">UPOSLENICI</h4>

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.Slika ?? "avtar.png");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3 class="text-secondary">@employee.Ime <br /> @employee.Prezime</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">

                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">Detalji</a>


                    @if (User.IsInRole("Admin") || User.IsInRole("Uposlenik"))
                    {
                        <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id"
                           class="btn btn-primary m-1">Uredi</a>
                        <a asp-controller="home" asp-action="delete" asp-route-id="@employee.Id"
                           class="btn btn-light btn-outline-primary m-1">Izbriši</a>
                    }
                


            </div>
        </div>
    }
</div>