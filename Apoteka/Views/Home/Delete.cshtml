@model HomeDeleteViewModel

@{

    ViewData["Title"] = "Izbriši uposlenika";
    var photoPath = "~/Images/" + (Model.Uposlenik.Slika ?? "avtar.png");

}

<h3 class="text-center text-danger mt-5 mb-5">Da li ste sigurni da želite izbrisati uposlenika @Model.Uposlenik.Ime @Model.Uposlenik.Prezime?</h3>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-secondary">
                <h1>@Model.Uposlenik.Ime  @Model.Uposlenik.Prezime</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <br />
                <h4 class="text-secondary">Email : @Model.Uposlenik.Email</h4>
                <h4 class="text-secondary">Radno mjesto: @Html.DisplayFor(Model => Model.Uposlenik.RadnoMjesto)</h4>
            </div>

            <div class="card-footer text-center">
                <form asp-controller="Home" asp-action="Delete" method="post" enctype="multipart/form-data" class="mt-3">
                    <input hidden asp-for="Id" />
                    <a asp-controller="home" asp-action="index" class="btn btn-primary  m-1">Poništi</a>
                    <input type="submit" value="Izbriši" class="btn btn-danger  m-1" />

                </form>
            </div>

        </div>
    </div>

</div>
