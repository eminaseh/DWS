@model CreateRoleViewModel

@{
    ViewBag.Title = "Create new role";
}

<h2 class="text-center text-secondary m-5">Dodaj novu rolu</h2>
<div class="row justify-content-center">
    <div class="col-md-7">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName">Naziv role</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>


            <br />
            <button type="submit" class="btn btn-primary  btn-block">Dodaj</button>
            <a asp-controller="administration" asp-action="index" class="btn btn-primary btn-block">Poništi</a>
           
        </form>
    </div>
</div>


