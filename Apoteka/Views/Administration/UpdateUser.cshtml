@model ApplicationUser

    <h2 class="text-center text-secondary m-5">Uredi korisnika</h2>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-md-7">
            <form asp-action="UpdateUser" method="post">

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input name="password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="DatumRodjenja"></label>
                    <input type="date" asp-for="DatumRodjenja" class="form-control" />
                </div>

                <button type="submit" class="btn btn-block btn-primary mt-5">Sačuvaj</button>

                <a asp-controller="administration" asp-action="users" class="btn btn-block btn-primary ">Poništi</a>
            </form>
            </div>
        </div>












