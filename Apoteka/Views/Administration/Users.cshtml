@model IEnumerable<ApplicationUser>

<h2 class="text-center text-secondary m-5">Korisnici</h2>

<a asp-action="CreateUser" class="btn btn-primary mb-5" style="width:auto">Napravi novog korisnika</a>

<div class="table-responsive ">
    <table class="table  table-hover border-primary border-bottom">
        <thead>
            <tr class=" text-primary ">

                
                <th scope="col">Korisnik</th>
                <th scope="col">Datum rođenja</th>
                <th scope="col">Uredi korisnika</th>
                <th scope="col">Izbrši korisnika</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    
                    <td>@user.Email</td>
                    <td>@user.DatumRodjenja.ToString("d")</td>

                    <td><a class="btn btn-sm btn-primary" asp-action="UpdateUser" asp-route-id="@user.Id">Uredi</a></td>
                    <td>
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                Izbriši
                            </button>
                        </form>
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>
