@model Vijest

@{

    ViewData["Title"] = "Dodaj vijest";

}

<h2 class="text-center text-secondary m-4">Dodaj vijest</h2>

<a asp-action="Index" class="btn mb-4 btn-primary">Nazad</a>

<form asp-action="AddVijest" method="post">
    <div class="form-group">
        <label for="Naslov">Naslov:</label>
        <input class="form-control" name="Naslov" />
    </div>
    <div class="form-group">
        <label for="Opis">Opis:</label>
        <input class="form-control" name="Opis" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-primary">Dodaj</button>
    </div>
</form>

@if (Model != null)
{



    <div class="card mt-3 border-white" style="min-width:60%;">
        <div class="card-header border-white bg-light">
            <h3 class="text-secondary border-white">@Model.Naslov <br /></h3>
        </div>
        <div class="card-body border-white">
            <br />
            <p>Id : @Model.Id</p>
            <p>@Model.Opis</p>

        </div>
        <div class="card-footer border-white bg-white text-center">

            <hr />
        </div>
    </div>
}