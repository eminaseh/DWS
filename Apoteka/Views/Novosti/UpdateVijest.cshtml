@model Vijest
@{
    ViewBag.Title = "Uredi vijest";
 }

<a asp-action="Index" class="btn btn-primary mt-5 mb-5">Nazad</a>
<form method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Naslov"></label>
        <input class="form-control" asp-for="Naslov" />
    </div>
    <div class="form-group">
        <label asp-for="Opis"></label>
        <input class="form-control" asp-for="Opis" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn  btn-primary">Potvrdi</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{

    <p class="text-center m-5">Id :@Model.Id</p>
    <h3 class="text-center m-5">@Model.Naslov</h3>
    <h5 class="text-center m-5">@Model.Opis</h5>
    <hr />
   
}